{
  "name": "platzistore",
  "version": "1.0.0",
  "description": "This is a practice to create an API in express",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --verbose --silent --detectOpenHandles",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test:watch": "npm run test -- --watchAll",
    "migrations:gen": "sequelize-cli migration:generate --name",
    "migrations:run": "sequelize-cli db:migrate",
    "migrations:undo": "sequelize-cli db:migrate:undo",
    "migrations:undo:all": "sequelize-cli db:migrate:undo:all"
  },
  "author": "Jazziel Puente <Jazziel.puente.v@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mysql2": "^3.5.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "jest": "^29.6.3",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "standard": "^17.1.0",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "extends": "./node_modules/standard/eslintrc.json",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
